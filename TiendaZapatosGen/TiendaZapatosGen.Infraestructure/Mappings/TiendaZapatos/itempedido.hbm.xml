<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="TiendaZapatosGen.Infraestructure"
		                   namespace="TiendaZapatosGen.Infraestructure.EN.TiendaZapatos">
		    
		    
			
				<class name="ItemPedidoNH" table="ItemPedido"> 
				  	
						<id name="Id" column="idItemPedido" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Cantidad" type="integer"> 
						<column name="cantidad"  not-null="true"/>
					</property>
					<property name="Talla" type="string"> 
						<column name="talla"  not-null="true"/>
					</property>
			
			
			
			
			
		  			
						<bag name="Pedido" >
							<key>
							
								
								<column name="FK_idItemPedido_idItemPedido"/>
					      	</key>
							<one-to-many class="TiendaZapatosGen.Infraestructure.EN.TiendaZapatos.PedidoNH"/>
					    </bag>
					
			
		  			
						<many-to-one name="Usuario" class="TiendaZapatosGen.Infraestructure.EN.TiendaZapatos.UsuarioNH" >	
								<column name="FK_email_idUsuario"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="Carrito" table="[carrito_carrito_0]" inverse="true" >
							<key>
								
									<column name="FK_idItemPedido_idCarrito_0"/> 
							</key>
      						<many-to-many class="TiendaZapatosGen.Infraestructure.EN.TiendaZapatos.CarritoNH">
									<column name="FK_idCarritoCarrito_idCarrito"/> 
      						</many-to-many>
    					</bag>
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="ItemPedidoNHReadAllHQL">from ItemPedidoNH</query>
		</hibernate-mapping>
	